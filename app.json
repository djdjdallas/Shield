{
  "expo": {
    "name": "Scam Shield",
    "slug": "scam-shield",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#E0E7FF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scamshield.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSClipboardUsageDescription": "This app needs clipboard access to analyze suspicious messages you've copied.",
        "NSUserTrackingUsageDescription": "This app does not track you. All analysis is done anonymously.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": ["CA92.1"]
          }
        ],
        "NSPrivacyCollectedDataTypes": [],
        "NSPrivacyTracking": false,
        "NSPrivacyTrackingDomains": []
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.scamshield.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET"
      ],
      "edgeToEdgeEnabled": true,
      "blockedPermissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "scamshield",
    "plugins": [
      "expo-router"
    ],
    "extra": {
      "eas": {
        "projectId": "YOUR_PROJECT_ID"
      },
      "SUPABASE_URL": "",
      "SUPABASE_ANON_KEY": ""
    },
    "hooks": {
      "postPublish": []
    },
    "privacy": "unlisted",
    "primaryColor": "#8B5CF6",
    "description": "AI-powered text scam detection app. Protect yourself from phishing, fraud, and smishing with instant message analysis.",
    "githubUrl": "https://github.com/yourusername/scamshield"
  }
}
